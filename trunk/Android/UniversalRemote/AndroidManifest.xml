<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.remotec.universalremote.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:icon="@drawable/bt_ir_app"
        android:label="@string/app_name" >
        <activity
            android:name=".DeviceActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProgressDialog"
          android:theme="@android:style/Theme.Dialog" 
          android:configChanges="orientation|keyboardHidden" />
        <activity android:name=".DeviceKeyActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity android:name=".AddDeviceActivity"
                  android:label="@string/app_name"
                  android:windowSoftInputMode="adjustUnspecified|stateHidden" 
                  android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity android:name=".SelectIconDialog"
          android:theme="@android:style/Theme.Dialog" 
          android:configChanges="orientation|keyboardHidden" />
    </application>
</manifest>