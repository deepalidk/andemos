<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DeviceButtonText">
        <item name="android:textSize">@dimen/dev_btn_txt_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/basic_white</item>
    </style>
    <style name="DeviceLeftTitleText">
        <item name="android:textSize">@dimen/dev_title_txt_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="DeviceRightTitleText">
        <item name="android:textSize">@dimen/dev_right_title_txt_size</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="KeyButtonText">
        <item name="android:textSize">@dimen/key_btn_txt_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/button_font_color</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="KeyButtonNoText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="android:singleLine">true</item>
    </style>
     <style name="Dialog_TextView">
        <item name="android:textSize">@dimen/dialog_textview_size</item>
        <item name="android:textColor">@color/white_text</item>
    </style>
    <style name="Learn_Dialog_TextView">
        <item name="android:textSize">@dimen/learn_dialog_txt_size</item>
        <item name="android:textColor">@color/white_text</item>
    </style>
    <style name="spiner_item_textview">
        <item name="android:textSize">@dimen/spine_item_text_size</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/black</item>
    </style>
    
    <style name="spiner_textview">
        <item name="android:textSize">@dimen/spine_item_text_size</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="WizardButton">
        <item name="android:textSize">@dimen/wizard_btn_txt_size</item>
        <item name="android:layout_width">@dimen/wizard_btn_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/basic_white</item>
    </style>
    
    <style name="WizardFooter">
        <item name="android:background">@color/settings_footer_base</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/wizard_footer_height</item>
    </style>
    
    <style name="WizardText">
        <item name="android:textSize">@dimen/wizard_txt_size</item>
        <item name="android:textColor">@color/basic_white</item>
        <item name="android:background">@color/settings_footer_base</item>
    </style>
    <style name="WizardLabel">
        <item name="android:textSize">@dimen/wizard_txt_size</item>
        <item name="android:textColor">@color/basic_white</item>
    </style>
</resources>
