<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flipview="http://schemas.android.com/apk/res/com.remotec.universalremote.activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <!-- Device title Bar -->
    <RelativeLayout
        android:id="@id/device_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dev_title_height"
        android:background="@drawable/title"
        android:layout_weight="1"
        android:gravity="center_vertical" >
        <TextView
            android:id="@+id/title_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textAppearance="@style/DeviceTitleText"
            android:text="@string/app_name" />
    </RelativeLayout>

    <!-- Device table -->
    <ScrollView
        android:id="@id/device_ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:background="@drawable/bg"
        android:scrollbars="vertical" >

        <TableLayout
            android:id="@id/device_table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,3" >
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" />
                <com.remotec.universalremote.activity.component.DeviceButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_device_background"
                    android:drawableTop="@drawable/img_add"
                    android:paddingLeft="@dimen/dev_btn_padding_left"
                    android:paddingRight="@dimen/dev_btn_padding_right"
                    android:paddingTop="@dimen/dev_btn_padding_top"
                    android:paddingBottom="@dimen/dev_btn_padding_bottom"
                    android:text="@string/add_device"
                    android:textAppearance="@style/DeviceButtonText" />

                <com.remotec.universalremote.activity.component.DeviceButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_device_background"
                    android:drawableTop="@drawable/icon_device_tv"
                    android:paddingLeft="@dimen/dev_btn_padding_left"
                    android:paddingRight="@dimen/dev_btn_padding_right"
                    android:paddingTop="@dimen/dev_btn_padding_top"
                    android:paddingBottom="@dimen/dev_btn_padding_bottom"
                    android:text="@string/add_device"
                    android:visibility="invisible"
                    android:textAppearance="@style/DeviceButtonText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" />

                <com.remotec.universalremote.activity.component.DeviceButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_device_background"
                    android:drawableTop="@drawable/icon_device_tv"
                                        android:paddingLeft="@dimen/dev_btn_padding_left"
                    android:paddingRight="@dimen/dev_btn_padding_right"
                    android:paddingTop="@dimen/dev_btn_padding_top"
                    android:paddingBottom="@dimen/dev_btn_padding_bottom"
                    android:text="@string/add_device"
                    android:visibility="invisible"
                    android:textAppearance="@style/DeviceButtonText" />

                <com.remotec.universalremote.activity.component.DeviceButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_device_background"
                    android:drawableTop="@drawable/icon_device_tv"
                    android:paddingLeft="@dimen/dev_btn_padding_left"
                    android:paddingRight="@dimen/dev_btn_padding_right"
                    android:paddingTop="@dimen/dev_btn_padding_top"
                    android:paddingBottom="@dimen/dev_btn_padding_bottom"
                    android:text="@string/add_device"
                    android:visibility="invisible"
                    android:textAppearance="@style/DeviceButtonText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" />

                <com.remotec.universalremote.activity.component.DeviceButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_device_background"
                    android:drawableTop="@drawable/icon_device_tv"
                    android:paddingLeft="@dimen/dev_btn_padding_left"
                    android:paddingRight="@dimen/dev_btn_padding_right"
                    android:paddingTop="@dimen/dev_btn_padding_top"
                    android:paddingBottom="@dimen/dev_btn_padding_bottom"
                    android:text="@string/add_device"
                    android:visibility="invisible"
                    android:textAppearance="@style/DeviceButtonText" />

                <com.remotec.universalremote.activity.component.DeviceButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_device_background"
                    android:drawableTop="@drawable/icon_device_tv"
                    android:paddingLeft="@dimen/dev_btn_padding_left"
                    android:paddingRight="@dimen/dev_btn_padding_right"
                    android:paddingTop="@dimen/dev_btn_padding_top"
                    android:paddingBottom="@dimen/dev_btn_padding_bottom"
                    android:text="@string/add_device"
                    android:textAppearance="@style/DeviceButtonText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" />

                <com.remotec.universalremote.activity.component.DeviceButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_device_background"
                    android:drawableTop="@drawable/icon_device_tv"
                    android:paddingLeft="@dimen/dev_btn_padding_left"
                    android:paddingRight="@dimen/dev_btn_padding_right"
                    android:paddingTop="@dimen/dev_btn_padding_top"
                    android:paddingBottom="@dimen/dev_btn_padding_bottom"
                    android:text="@string/add_device"
                    android:visibility="invisible"
                    android:textAppearance="@style/DeviceButtonText" />

                <com.remotec.universalremote.activity.component.DeviceButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_device_background"
                    android:drawableTop="@drawable/img_add"
                    android:paddingLeft="@dimen/dev_btn_padding_left"
                    android:paddingRight="@dimen/dev_btn_padding_right"
                    android:paddingTop="@dimen/dev_btn_padding_top"
                    android:paddingBottom="@dimen/dev_btn_padding_bottom"
                    android:text="@string/add_device"
                    android:visibility="invisible"
                    android:textAppearance="@style/DeviceButtonText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent" />
            </TableRow>
        </TableLayout>
    </ScrollView>


</LinearLayout>