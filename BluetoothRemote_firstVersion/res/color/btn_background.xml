<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<gradient android:startColor="#FAFCFD" android:endColor="#30B8F0"
				android:angle="270" />
 			<stroke android:width="2dp" android:color="#30B8F0" /> 
			<corners android:radius="2dp" />
			<padding android:left="10dp" android:top="10dp"
				android:right="10dp" android:bottom="10dp" />
		</shape>
	</item>
	<item android:state_focused="true">
		<shape>
			<gradient android:startColor="#FAFCFD" android:endColor="#30B8F0"
				android:angle="270" />
  			<stroke android:width="2dp" android:color="#3FC2F5" />
			<corners android:radius="2dp" />  
			<padding android:left="10dp" android:top="10dp"
				android:right="10dp" android:bottom="10dp" />
		</shape>
	</item>
	<item>
		<shape>
			<gradient android:startColor="#FAFCFD" android:endColor="#A3B7BF"
				android:angle="270" />
			<stroke android:width="0dp" android:color="#CECBCE" />
			<corners android:radius="2dp" />
			<padding android:left="10dp" android:top="10dp"
				android:right="10dp" android:bottom="10dp" />
		</shape>
	</item>
</selector>


 